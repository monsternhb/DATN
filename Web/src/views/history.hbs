<!-- History page -->
<div class='history__page grid__column-10'>
  <div class='history__control'>
    <div class='grid__row'>
      <div class='history__btn'>
        <button class='btn__primary btn__history'>
          view controller
        </button>
        <button class='btn__primary btn__history'>
          view total products
        </button>
        <button class='btn__primary btn__history'>Export</button>
      </div>
    </div>
  </div>

  <div class='history__option'>
    <div class='grid__row'>
      <form action='' class='form-option'>
        <span class='option-text'>Date from</span>
        <input type='text' class='date-from' placeholder='dd/mm/yy' />
        <span class='option-text'>Date to</span>
        <input type='text' class='date-from' placeholder='dd/mm/yy' />
        <input
          type='submit'
          class='btn__date-from btn__primary'
          value='Search'
        />
      </form>
    </div>
  </div>

  <div class='history__table'>
    <div class='grid__row'>
      <!-- table tittle -->
      <div class='table table__header'>
        <span class='table__id'>User</span>
        <span class='table__time'>Time</span>
        <span class='table__controller'>Behavior</span>
      </div>

      <!-- Table data -->
      {{#each histories}}
        <div class='table table__data'>
          <span class='table__id'>{{this.user_name}}</span>
          <span class='table__time'>{{formatDate this.time}}</span>
          <span class='table__controller'>{{this.behavior}}</span>
        </div>
      {{/each}}

    </div>
  </div>

  {{!-- Pagination --}}
  {{!-- <div class="current__page" id={{page}}></div>
  <ul class="pagination__list home__pagination" id={{numPage}} > --}}
                  
  <div class="pagination pagination__list pagination-centered">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#times pagination.numPage}}
            <li class="page-item"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
        {{/times}}
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
                  

                
  </ul>
</div>

{{#if devIp.ip_add}}
  <div class="alert alert-light noti__dev" role="alert">
    {{devIp.ip_add}}
  </div>
{{else}}
  <div class="alert alert-light noti__dev" role="alert">
    Please select your device!!
  </div>
{{/if}}

