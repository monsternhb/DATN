<!-- Alarm page -->
<div class="alarm__page grid__column-10">
  <div class="alarm__control">
    <div class="grid__row">
      <div class="alarm__btn">
        <button class="btn__primary btn__alarm">
          view controller
        </button>
        <button class="btn__primary btn__alarm">
          view total products
        </button>
        <button class="btn__primary btn__alarm">Export</button>
      </div>
    </div>
  </div>

  <div class="alarm__option">
    <div class="grid__row">
      <form action="" class="alarm__form-option">
        <span class="alarm__option-text">Date from</span>
        <input type="text" class="alarm__date-from" placeholder="dd/mm/yy" />
        <span class="alarm__option-text">Date to</span>
        <input type="text" class="alarm__date-from" placeholder="dd/mm/yy" />
        <input
          type="submit"
          class="btn-alarm__date-from btn__primary"
          value="Search"
        />
      </form>
    </div>
  </div>

  <div class="alarm__table">
    <div class="grid__row">
      <!-- table tittle -->
      <div class="table table__header">
        <span class="table__id">ID</span>
        <span class="table__time">Time</span>
        <span class="table__subject">Subject</span>
        <span class="table__alarm">Alarm</span>
      </div>

      <!-- Table data -->
      <div class="table table__data">
        <span class="table__id">13203091309139103ccccc</span>
        <span class="table__time">12/07/2021</span>
        <span class="table__subject">Conveyer</span>
        <span class="table__alarm">No product</span>
      </div>
    </div>
  </div>
</div>